{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Ingestion Service",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/services/ingestion-service",
            "cwd": "${workspaceFolder}/services/ingestion-service",
            "env": {
                "PORT": "8080",
                "DATABASE_URL": "postgres://stratagemforge:password@localhost:5432/stratagemforge?sslmode=disable",
                "DATA_PATH": "${workspaceFolder}/data"
            },
            "args": [],
            "showLog": true,
            "console": "integratedTerminal",
            "stopOnEntry": false
        },
        {
            "name": "Debug Ingestion Service (No DB)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/services/ingestion-service",
            "cwd": "${workspaceFolder}/services/ingestion-service",
            "env": {
                "PORT": "8080",
                "DATA_PATH": "${workspaceFolder}/data"
            },
            "args": [],
            "showLog": true,
            "console": "integratedTerminal",
            "stopOnEntry": false
        },
        {
            "name": "Debug BFF Service",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/services/bff/dist/index.js",
            "cwd": "${workspaceFolder}/services/bff",
            "env": {
                "PORT": "8080",
                "INGESTION_SERVICE_URL": "http://localhost:8080"
            },
            "console": "integratedTerminal",
            "sourceMaps": true,
            "outFiles": ["${workspaceFolder}/services/bff/dist/**/*.js"],
            "preLaunchTask": "build-bff"
        },
        {
            "name": "Debug User Service",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/services/user-service",
            "cwd": "${workspaceFolder}/services/user-service",
            "env": {
                "PORT": "8080",
                "DATABASE_URL": "postgres://stratagemforge:password@localhost:5432/stratagemforge?sslmode=disable"
            },
            "args": [],
            "showLog": true,
            "console": "integratedTerminal",
            "stopOnEntry": false
        }
    ]
}