{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-ingestion-service",
            "type": "shell",
            "command": "go",
            "args": ["build", "-o", "main.exe", "."],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/services/ingestion-service"
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": ["$go"]
        },
        {
            "label": "build-user-service",
            "type": "shell",
            "command": "go",
            "args": ["build", "-o", "main.exe", "."],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/services/user-service"
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": ["$go"]
        },
        {
            "label": "build-bff",
            "type": "shell",
            "command": "npm",
            "args": ["run", "build"],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/services/bff"
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": ["$tsc"]
        },
        {
            "label": "test-ingestion-service",
            "type": "shell",
            "command": "go",
            "args": ["test", "./..."],
            "group": "test",
            "options": {
                "cwd": "${workspaceFolder}/services/ingestion-service"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": ["$go"]
        },
        {
            "label": "run-postgres",
            "type": "shell",
            "command": "podman-compose",
            "args": ["up", "-d", "postgres"],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}